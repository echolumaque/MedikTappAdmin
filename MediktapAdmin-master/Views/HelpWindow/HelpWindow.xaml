<view:BaseWindow x:Class="MediktapAdmin.Views.HelpWindow.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediktapAdmin.Views.HelpWindow"
        xmlns:view="clr-namespace:MediktapAdmin.Templates"
        xmlns:vm="clr-namespace:MediktapAdmin.Views.HelpWindow.ViewModel"
        x:TypeArguments="vm:HelpWindowViewModel"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vm:HelpWindowViewModel}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="HelpWindow" 
        Height="150" Width="370">
    <Grid>
        <Label Content="Please drop a message at MedikTapp@gmail.com"
               
               HorizontalAlignment="Left"
               Margin="10,54,0,0" 
               FontSize="15"
               VerticalAlignment="Top"/>

    </Grid>
</view:BaseWindow>
