<Window x:Class="MediktapAdmin.Views.AddEditPromos.AddEditPromo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="AddEditPromo"
        Width="456.72"
        Height="258.795"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*" />
            <ColumnDefinition Width="190*" />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtpromoname"
                 Grid.ColumnSpan="2"
                 Width="275"
                 Height="23"
                 Margin="156,32,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap" />
        <TextBox x:Name="txtpromodescription"
                 Grid.ColumnSpan="2"
                 Width="275"
                 Height="23"
                 Margin="156,67,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap" />
        <TextBox x:Name="txtpromoprice"
                 Grid.ColumnSpan="2"
                 Width="275"
                 Height="23"
                 Margin="156,103,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap" />
        <Button x:Name="btnsavepromo"
                Width="109"
                Height="20"
                Margin="23,187,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#695CD5"
                Content="Save"
                Foreground="White" />
        <DatePicker x:Name="dtpromoperiod"
                    Grid.ColumnSpan="2"
                    Width="275"
                    Height="24"
                    Margin="156,139,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" />
        <Label Width="80"
               Height="26"
               Margin="15,30,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Promo Name" />
        <Label Width="109"
               Height="26"
               Margin="15,65,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Promo Description" />
        <Label Width="74"
               Height="26"
               Margin="15,101,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Promo Price" />
        <Label Width="82"
               Height="26"
               Margin="15,138,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Promo Period" />

    </Grid>
</Window>
